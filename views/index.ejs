<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Todo list App</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://use.fontawesome.com/52d911658f.js"></script>
    <script src="/send_url.js"></script>
  </head>
  <body>
    <div class="todo-list">  
      <header>
        <h1>Todo list</h1>
      </header>
      <div class="container">
        <form action="/create" method="post">
          <input type="text" placeholder="Enter Todo list" name="todo" >
        </form>
        <div class="list">
          <% items.forEach((todo) => { %>
            <a href="#" class="content"><%= todo.name %> </a>
            
            <div class="bottons">
              <form action="/delete/<%= todo.id %>" method="post">
                    <input type="submit" value="Del" class="del">
              </form>
              <a href="/edit/<%= todo.id %>" >Edit</a>
           </div><br>
          
          <% }) %>
        </div>
      </div>
    </div>
    
  </body>
</html>